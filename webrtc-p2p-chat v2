        <button id="makeOffer" class="secondary">Generate Offer (peer A)</button>
      </div>
      <div class="hint">
        Requires microphone permission. Open via <code>https://</code> or <code>localhost</code>.
      </div>
      <div class="hint">
        Only the Offerer creates DataChannels; the other side receives them automatically.
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h3>Remote Audio</h3>
        <span class="pill-label"><span></span>Auto-play on track</span>
      </div>
      <audio id="remoteAudio" autoplay playsinline controls></audio>
      <div class="hint">
        No sound? Ensure a user gesture occurred. iOS requires <code>playsinline</code>.
      </div>
    </div>
  </div>

  <div class="row">
    <div class="card">
      <div class="card-header">
        <h3>Text Chat</h3>
        <span class="badge">DataChannel: <code>chat</code></span>
      </div>
      <div id="chatHistory" class="chat-wrapper"></div>
      <input id="chatInput" placeholder="Type a message and press Enter after connection is established" autocomplete="off" autocorrect="off">
      <div class="hint">
        Available after connection and DataChannel are open.
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h3>File Transfer</h3>
        <span class="badge">DataChannel: <code>file</code></span>
      </div>
      <input type="file" id="fileInput">
      <div class="button-row" style="margin-top:6px;">
        <button id="sendFile">Send File</button>
      </div>
      <div id="fileProgress">Waiting for connection...</div>
      <div class="hint">
        Received files download automatically. Large files use chunked transfer with basic backpressure.
      </div>
    </div>
  </div>
</main>
<script>
  let pc = null;
  let stream = null;
  let chatChannel = null;
  let fileChannel = null;
  let isOfferer = false;
  const iceBuf = [];
  const iceGatherEl = document.getElementById('iceGather');
  const connStateEl = document.getElementById('connState');
  const connDotEl = document.getElementById('connDot');
  const localEl = document.getElementById('local');
  const remoteEl = document.getElementById('remote');
  const remoteAudioEl = document.getElementById('remoteAudio');
  const signalStatusEl = document.getElementById('ervationsStatus');
  const fileProgressEl = document.getElementById('fileProgress');
  const chatHistoryEl = document.getElementById('chatHistory');
  const chatInputEl = document.getElementById('chatInput');

  const incomingFileState = {
    name: '',
    size: 0,
    buffers: [],
    received: 0
  };

  function buildIceServers() {
    const turnUrl = document.getElementById('turnUrl').value.trim();
    const u = document.getElementById('turnUser').value.trim();
    const p = document.getElementById('turnPass').value.trim();
    const servers = [{ urls: 'stun:stun.l.google.com:19302' }];
    if (turnUrl) {
      const entry = { urls: turnUrl };
      if (u) entry.username = u;
      if (p) entry.credential = p;
      servers.push(entry);
    }
    return servers;
  }

  function updateLocalBlob() {
    if (!pc) return;
    const blob = { sdp: pc.localDescription || null, ice: iceBuf };
    localEl.value = JSON.stringify(blob, null, 2);
  }

  function setConnectionState(state) {
    connStateEl.textContent = state;
    connDotEl.classList.remove('connected', 'failed');
    if (state === 'connected') {
      connDotEl.classList.add('connected');
    } else if (state === 'failed' || state === 'disconnected') {
      connDotEl.classList.add('failed');
    }
  }

  function appendChatMessage(msg, isRemote = false) {
    const container = document.createElement('div');
    container.className = 'chat-msg ' + (isRemote ? 'chat-peer' : 'chat-me');
    const meta = document.createElement('span');
    meta.className = 'chat-meta';
    meta.textContent = isRemote ? 'Peer' : 'Me';
    const text = document.createElement('div');
    text.textContent = msg;
    container.appendChild(meta);
    container.appendChild(text);
    chatHistoryEl.appendChild(container);
    chatHistoryEl.scrollTop = chatHistoryEl.scrollHeight;
  }

  function attachChatChannelHandlers(channel) {
    chatChannel = channel;
    chatChannel.onopen = () => appendChatMessage('[chat ready]', true);
    chatChannel.onmessage = (e) => appendChatMessage(e.data, true);
  }

  function attachFileChannelHandlers(channel) {
    fileChannel = channel;
    fileChannel.binaryType = 'arraybuffer';
    fileChannel.onopen = () => { fileProgressEl.textContent = 'File channel ready'; };
    fileChannel.onmessage = (e) => {
      if (typeof e.data === 'string') {
        try {
          const meta = JSON.parse(e.data);
          incomingFileState.name = meta.name || 'download';
          incomingFileState.size = meta.size || 0;
          incomingFileState.buffers = [];
          incomingFileState.received = 0;
          fileProgressEl.textContent = `Receiving: ${incomingFileState.name} (0 / ${incomingFileState.size})`;
        } catch (_) {}
      } else {
        incomingFileState.buffers.push(e.data);
        incomingFileState.received += e.data.byteLength;
        const total = incomingFileState.size || '?';
        fileProgressEl.textContent = `Receiving: ${incomingFileState.name} (${incomingFileState.received} / ${total})`;
        if (incomingFileState.size && incomingFileState.received >= incomingFileState.size) {
          const blob = new Blob(incomingFileState.buffers);
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = incomingFileState.name;
          document.body.appendChild(a);
          a.click();
          a.remove();
          URL.revokeObjectURL(url);
          fileProgressEl.textContent = 'File received';
        }
      }
    };
  }

  function handleIncomingDataChannel(e) {
    if (e.channel.label === 'chat') attachChatChannelHandlers(e.channel);
    if (e.channel.label === 'file') attachFileChannelHandlers(e.channel);
  }

  function createLocalDataChannels() {
    if (chatChannel || fileChannel) return;
    const chat = pc.createDataChannel('chat');
    attachChatChannelHandlers(chat);
    const file = pc.createDataChannel('file');
    attachFileChannelHandlers(file);
  }

  async function initPeerConnection() {
    if (pc) return;
    pc = new RTCPeerConnection({ iceServers: buildIceServers() });
    if (!stream) {
      stream = await navigator.mediaDevices.getUserMedia({ audio: true });
    }
    stream.getTracks().forEach(t => pc.addTrack(t, stream));
    pc.ontrack = (e) => { remoteAudioEl.srcObject = e.streams[0]; };
    pc.onicecandidate = (e) => { if (e.candidate) { iceBuf.push(e.candidate); updateLocalBlob(); } };
    pc.onicegatheringstatechange = () => { iceGatherEl.textContent = pc.iceGatheringState; updateLocalBlob(); };
    pc.onconnectionstatechange = () => setConnectionState(pc.connectionState);
    pc.ondatachannel = handleIncomingDataChannel;
  }

  document.getElementById('start').onclick = async () => {
    try {
      await initPeerConnection();
      alert('Ready: Peer A can now click "Generate Offer".');
    } catch (err) {
      alert('Failed to start capture: ' + (err.message || err));
    }
  };

  document.getElementById('makeOffer').onclick = async () => {
    if (!pc) return alert('Please click "Start Capture" first.');
    try {
      isOfferer = true;
      createLocalDataChannels();
      const offer = await pc.createOffer({ offerToReceiveAudio: true });
      await pc.setLocalDescription(offer);
      updateLocalBlob();
      signalStatusEl.textContent = 'Offer generated. Copy left JSON to peer.';
      signalStatusEl.style.color = 'var(--text-muted)';
    } catch (err) {
      signalStatusEl.textContent = 'Error: ' + (err.message || err);
      signalStatusEl.style.color = '#f97373';
    }
  };

  document.getElementById('applyRemote').onclick = async () => {
    if (!pc) return alert('Please click "Start Capture" first.');
    const raw = remoteEl.value.trim();
    if (!raw) return alert('Remote JSON is empty');
    try {
      const obj = JSON.parse(raw);
      if (obj.sdp) {
        await pc.setRemoteDescription(obj.sdp);
        if (pc.signalingState === 'have-remote-offer') {
          const answer = await pc.createAnswer();
          await pc.setLocalDescription(answer);
        }
      }
      if (Array.isArray(obj.ice)) {
        for (const c of obj.ice) {
          try { await pc.addIceCandidate(c); } catch (_) {}
        }
      }
      updateLocalBlob();
      signalStatusEl.textContent = 'Remote applied successfully.';
      signalStatusEl.style.color = 'var(--text-muted)';
    } catch (err) {
      signalStatusEl.textContent = 'Error: ' + (err.message || err);
      signalStatusEl.style.color = '#f97373';
    }
  };

  document.getElementById('copyLocal').onclick = async () => {
    try {
      await navigator.clipboard.writeText(localEl.value);
      alert('Local JSON copied. Send it to your peer.');
    } catch (_) {
      alert('Copy failed. Select and copy manually.');
    }
  };

  document.getElementById('clearLocal').onclick = () => { localEl.value = ''; };
  document.getElementById('clearRemote').onclick = () => { remoteEl.value = ''; signalStatusEl.textContent = ''; };

  chatInputEl.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      const msg = chatInputEl.value.trim();
      if (!msg) return;
      if (!chatChannel || chatChannel.readyState !== 'open') return alert('Chat channel not ready.');
      chatChannel.send(msg);
      appendChatMessage(msg, false);
      chatInputEl.value = '';
    }
  });

  document.getElementById('sendFile').onclick = () => {
    const input = document.getElementById('fileInput');
    const file = input.files[0];
    if (!file) return alert('Select a file first.');
    if (!fileChannel || fileChannel.readyState !== 'open') return alert('File channel not ready.');

    fileChannel.send(JSON.stringify({ name: file.name, size: file.size }));
    const chunkSize = 16 * 1024;
    const maxBuffered = 4 * 1024 * 1024;
    let offset = 0;
    const reader = new FileReader();
    fileProgressEl.textContent = `Sending: ${file.name} (0 / ${file.size})`;
    reader.onload = (e) => {
      const buffer = e.target.result;
      const sendChunk = () => {
        if (fileChannel.bufferedAmount > maxBuffered) {
          setTimeout(sendChunk, 30);
          return;
        }
        fileChannel.send(buffer);
        offset += buffer.byteLength;
        fileProgressEl.textContent = `Sending: ${file.name} (${offset} / ${file.size})`;
        if (offset < file.size) readSlice(offset);
        else fileProgressEl.textContent = 'File sent';
      };
      sendChunk();
    };
    const readSlice = (o) => reader.readAsArrayBuffer(file.slice(o, o + chunkSize));
    readSlice(0);
  };
</script>
</body>
</html>
